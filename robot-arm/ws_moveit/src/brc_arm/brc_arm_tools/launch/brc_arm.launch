<launch>
	<!-- ARGS -->
  <arg name="sim" default="false" />
  <arg name="db" default="false" />
  <arg name="db_path" default="$(find brc_arm_config)/default_warehouse_mongo_db" />
  <arg name="debug" default="false" />
  <arg name="use_gui" default="true" />

  <!-- Gazebo specific options -->
  <arg name="gazebo_gui" default="true"/>
  <arg name="paused" default="false"/>

  <!-- By default, use the urdf location provided from the package -->
  <arg name="urdf_path" default="$(find brc_arm_description)/urdf/brc_arm_description.urdf"/>

  <!-- launch the gazebo simulator and spawn the robot -->
  <!-- <include file="$(find brc_arm_config)/launch/gazebo.launch" > -->
    <!-- <arg name="paused" value="$(arg paused)"/> -->
    <!-- <arg name="gazebo_gui" value="$(arg gazebo_gui)"/> -->
    <!-- <arg name="urdf_path" value="$(arg urdf_path)"/> -->
  <!-- </include> -->

  <include file="$(find brc_arm_config)/launch/planning_context.launch">
    <arg name="load_robot_description" value="false"/>
  </include>

  <!--node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="true" output="screen" /-->


  <include file="$(find brc_arm_config)/launch/move_group.launch">
    <arg name="allow_trajectory_execution" value="true"/>
    <arg name="fake_execution" value="false"/>
    <arg name="info" value="true"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>


  <include file="$(find brc_arm_hardware_interface)/launch/brc_arm_position_trajectory_controllers.launch" if="$(eval sim == false)"/>

  <!-- Run Rviz and load the default config to see the state of the move_group node -->
  <include file="$(find brc_arm_config)/launch/moveit_rviz.launch">
    <arg name="rviz_config" value="$(find brc_arm_config)/launch/moveit.rviz"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>

  <include file="$(find brc_arm_config)/launch/default_warehouse_db.launch" if="$(arg db)">
    <arg name="moveit_warehouse_database_path" value="$(arg db_path)"/>
  </include>

  <include file="$(find brc_arm_config)/launch/planning_context.launch">
    <arg name="load_robot_description" value="false"/>
  </include>
  <!-- This node does the servoing calculations -->
  <node name="servo_server" pkg="moveit_servo" type="servo_server" output="screen" >
    <param name="servo_server" type="string" value="" />
    <rosparam ns="" command="load" file="$(find brc_arm_tools)/config/servo_config.yaml" />
    <remap from="joint_states" to="brc_arm/joint_states"/>
  </node>

  <!-- joy node -->
  <node respawn="true" pkg="joy"
        type="joy_node" name="arm_joy" >
    <param name="dev" type="string" value="/dev/input/js2" />
    <!-- <param name="deadzone" value="0.12" /> -->
  </node>

  <!-- teleop_tools translates a joystick command into a twist message -->
  <!-- <arg name="cmd_vel" default="arm_joy" />
  <arg name="teleop_config" default="$(find brc_arm_tools)/config/stick_via_teleop_tools.yaml" />
  <rosparam file="$(arg teleop_config)" command="load" />

  <node pkg="joy_teleop" type="joy_teleop.py" name="joy_teleop">
    <remap from="cmd_vel" to="$(arg cmd_vel)" />
    <remap from="joy" to="spacenav/joy" />
  </node> -->

	<!-- NODES -->
	<!--node pkg="tf" type="static_transform_publisher" name="virtual_joint_broadcaster_0" args="0 0 0 0 0 0 odom_combined base_link 100" /-->


	<node pkg="motor_simulator" name="motor_simulator_node" type="motor_simulator.py" respawn="false" output="screen"/>

	<node pkg="brc_arm_tools" name="brc_arm_node" type="brc_arm_node.py" respawn="false" output="screen"/>

</launch>